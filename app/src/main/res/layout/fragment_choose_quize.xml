<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="random quiz"
        android:id="@+id/randquiz"
        android:layout_marginTop="65dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="doRandQuiz"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="hard quiz"
        android:id="@+id/hardquiz"
        android:layout_below="@+id/randquiz"
        android:layout_alignLeft="@+id/randquiz"
        android:layout_alignStart="@+id/randquiz"
        android:onClick="doHardQuiz"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/saveDictionary"
        android:id="@+id/saveAic"
        android:layout_gravity="center_horizontal"
        android:onClick="saveDicToMongoDB"
        />

</LinearLayout>